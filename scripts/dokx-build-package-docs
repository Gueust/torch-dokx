#!/usr/bin/env th
local lapp = require 'pl.lapp'
require 'dokx'

local function processArgs()
    return lapp [[
Build documentation for a package and install it into the given documentation tree.

Arguments:
    -o,--output (string)     output documentation tree
    -r,--repl (default none)  output REPL markdown
    <input> (string)         input package path
    --debug                  debug mode
]]
end

local function main(args)
    if args.debug then
        dokx.debugMode()
    end
    dokx.buildPackageDocs(args.output, args.input, args.repl)
end

main(processArgs())
